{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Email" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "Email",
        "Args": {
          "fromEmail": "noreply@brainstorm.local",
          "toEmail": "admin@brainstorm.local",
          "mailSubject": "BrainstormSessions Critical Error",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} [{Level}] {Message}{NewLine}{Exception}",
          "connectionInfo": {
            "EmailSubject": "BrainstormSessions Error",
            "FromEmail": "app@brainstorm.local",
            "ToEmail": "admin@brainstorm.local",
            "NetworkCredentials": {
              "UseDefaultCredentials": true
            },
            "PickupDirectoryLocation": "EmailPickup"
          },
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}